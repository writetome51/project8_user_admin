extends layout

block bodyContent

    form(method='POST', action='/change-user')
        div
            input(id='id', name='id', required, value=user.id, hidden)
            label(for='username') Username
            input(id='username', name='username', required, value=user.username)
        div
            label(for='password') Password
            input(type='password', id='password', name='password' , required, value=user.password)
        div
            label(for='email') Email
            input(type='email', id='email', name='email', required, value=user.email)
        div
            label(for='age') Age
            input(type='number', id='age', name='age', required, value=user.age)
        div
            input(type='submit', value='Save Changes')